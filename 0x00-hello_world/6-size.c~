#include <stdio.h>

int main(void)
{
  printf("Size of a char: %lu",sizeof(char));
  printf(" byte(s)\n");
  printf("Size of a int: %lu",sizeof(int));
  printf(" byte(s)\n");
  printf("Size of a long: $lu");
  printf(" byte(s)\n");
  printf("Size of a lon long int: $lu");
  printf(" byte(s)\n");
  printf("Size o a float: %lu",sizeof(float));
  printf(" byte(s)\nx");
  return(0);
}
